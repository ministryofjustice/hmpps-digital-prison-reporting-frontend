{
  "name": "hmpps-digital-prison-reporting-frontend",
  "version": "0.0.1",
  "description": "The Digital Prison Reporting Frontend contains templates and code to help display data effectively in UI applications.",
  "repository": "git@github.com:ministryofjustice/hmpps-digital-prison-reporting-frontend.git",
  "license": "MIT",
  "scripts": {
    "?build:docs": "npm run build:package && eleventy --input=./docs --output=public",
    "build:dist": "gulp build:dist",
    "build:package": "gulp build:package",
    "ci:release": "HUSKY=0 CI=true semantic-release --debug",
    "ci:dryrun": "HUSKY=0 CI=true semantic-release --dry-run",
    "test": "npm-run-all --parallel test:*",
    "test:jest": "jest",
    "test:lint": "eslint . --cache --max-warnings 0",
    "?test:sass": "npm install node-sass && node-sass -q test.scss >/dev/null && echo 'ok'",
    "?test:docs": "npm run build:docs",
    "?watch:11ty": "eleventy --input=./docs --output=public --serve --watch",
    "start-test-app": "npm run build:package && node $NODE_OPTIONS test-app/start-server.js",
    "?record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "?int-test": "cypress run --config video=false",
    "?int-test-ui": "cypress open",
    "clean": "gulp build:clean && rm -rf node_modules",
    "lint:fix": "eslint . --fix"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}",
      "!server/(authentication|middleware|monitoring)/**/*.{ts,js,jsx,mjs}",
      "!server/app.ts",
      "!server/data/(rest|redis)Client.ts"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^1.6.6",
    "agentkeepalive": "^4.5.0",
    "applicationinsights": "^2.5.1",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.0",
    "csurf": "^1.11.0",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "express-session": "^1.17.3",
    "govuk-frontend": "^4.7.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.6.4",
    "jwt-decode": "^3.1.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.7.0",
    "prom-client": "^14.2.0",
    "redis": "^4.6.8",
    "superagent": "^8.1.2",
    "url-value-parser": "^2.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/cookie-session": "^2.0.44",
    "@types/csurf": "^1.11.2",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.4",
    "@types/jquery": "^3.5.19",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.5.9",
    "@types/nunjucks": "^3.2.3",
    "@types/passport": "^1.0.12",
    "@types/passport-oauth2": "^1.4.12",
    "@types/superagent": "^4.1.16",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.62.0",
    "audit-ci": "^6.6.1",
    "autoprefixer": "^10.4.15",
    "babel-loader": "^9.1.3",
    "browser-sync": "^2.29.3",
    "cookie-session": "^2.0.0",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "cypress": "^13.1.0",
    "cypress-multi-reporters": "^1.6.3",
    "del": "^7.1.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "gulp-cache": "^1.1.3",
    "gulp-concat": "^2.6.1",
    "gulp-filter": "^7",
    "gulp-flatten": "^0.4.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-html-reporter": "^3.10.1",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.1",
    "lint-staged": "^13.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.3.3",
    "node-html-parser": "^6.1.5",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^6.5.4",
    "prettier": "^2.8.7",
    "prettier-plugin-jinja-template": "^0.5.0",
    "require-dir": "^1.2.0",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "semver": "^7.5.3",
    "optionator": "^0.9.3",
    "tough-cookie": "^4.1.3"
  }
}
