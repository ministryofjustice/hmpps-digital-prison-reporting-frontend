{
  "name": "@ministryofjustice/hmpps-digital-prison-reporting-frontend",
  "description": "The Digital Prison Reporting Frontend contains templates and code to help display data effectively in UI applications.",
  "version": "9999.9999.9999",
  "main": "dpr/all.mjs",
  "sass": "dpr/all.scss",
  "engines": {
    "node": "^22 || ^24",
    "npm": ">=10 <12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryofjustice/hmpps-digital-prison-reporting-frontend.git"
  },
  "keywords": [
    "dpr",
    "moj",
    "frontend",
    "design system",
    "template"
  ],
  "author": "HMPPS Digital Prison Reporting Team",
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/ministryofjustice/hmpps-digital-prison-reporting-frontend/issues"
  },
  "homepage": "https://github.com/ministryofjustice/hmpps-digital-prison-reporting-frontend#readme",
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "home_url": "http://localhost:3010/embedded/platform/async-reports",
    "request_url": "http://localhost:3010/embedded/platform/async/request-examples/request-example-success/request",
    "polling_url": "http://localhost:3010/embedded/platform/async/request-examples/request-example-success/request/exId_1721738244284",
    "report_url": "http://localhost:3010/embedded/platform/async/request-examples/request-example-success/request/tblId_1721738244284/report"
  },
  "scripts": {
    "package": "node esbuild/esbuild.config.js --build",
    "bundle-modules": "node ./scripts/bundle-modules.mjs",
    "docs:serve-prod": "serve -l 3000 dist-docs/dpr",
    "docs": "node esbuild/esbuild.docs.config.js --build",
    "docs:serve": "serve dist-docs/dpr",
    "docs:local": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.docs.config.js --build --watch --local\" \"node esbuild/esbuild.docs.config.js --local --dev-server\"",
    "test": "npm-run-all --parallel test:*",
    "test:jest": "jest --verbose --silent=false",
    "test:docs": "npm run docs",
    "test:packaging": "npm run package",
    "wiremock": "concurrently -p \"[{name}]\" -n \"Wiremock,SetupMocks\" -c \"yellow.bold,cyan.bold\" \"wiremock --verbose --port=9091\" \"wait-on http-get://localhost:9091/__admin/health && ts-node -T ./_networkMocks/setupMocks.ts\"",
    "start-test-app": "npm run package && node $NODE_OPTIONS test-app/start-server.js",
    "start:dev": "USE_MOCK_CLIENTS=true concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start:dev:noMockClients": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start:dev:noMockClients:noLogs": "SUPPRESS_LOGS=true concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start:server": "node esbuild/esbuild.config.js --dev-server",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test-cucumber": "cypress run --config-file cypress-tests/integration-tests/cypress.config.js",
    "int-test-cucumber-ui": "cypress open --config-file cypress-tests/integration-tests/cypress.config.js",
    "int-test": "concurrently -k -s first -p \"[{name}]\" -n \"wiremock, cypress\" -c \"yellow.bold, cyan.bold\" \"wiremock --port 9091\" \"cypress run --config-file cypress.config.ts\"",
    "int-test-ui": "concurrently -k -s first -p \"[{name}]\" -n \"wiremock, cypress\" -c \"yellow.bold, cyan.bold\" \"wiremock --port 9091\" \"cypress open --config-file cypress.config.ts\"",
    "int:test": "cypress run --config-file cypress-tests/integration-tests/cypress.config.js && npm run int-test",
    "clean": "rm -rf dist && rm -rf dist-docs && rm -rf dist-test-app && rm -rf node_modules",
    "lint:fix": "./node_modules/.bin/eslint . --fix",
    "axe_tests": "axe --exit --save axe_results.json $npm_package_config_home_url, $npm_package_config_request_url, $npm_package_config_polling_url, $npm_package_config_report_url",
    "generate-api-types": "openapi-typescript https://digital-prison-reporting-mi-dev.hmpps.service.justice.gov.uk/v3/api-docs --output src/dpr/types/api.d.ts && npm run lint:fix",
    "typecheck": "tsc",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/dpr/components/report-list/defaultTokenProvider.ts",
      "!src/dpr/setUpNunjucksFilters.ts",
      "!src/dpr/data/dprReportingClient.ts",
      "!src/dpr/middleware/updateBookmarksByCaseload.ts",
      "!<rootDir>/**/controller.ts",
      "!<rootDir>/**/routes.ts",
      "!<rootDir>/**/tests.cy.ts"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)test.{ts,js,jsx,mjs}"
    ],
    "testPathIgnorePatterns": [
      "dist",
      "dist-test-app"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@flipt-io/flipt": "^1.5.0",
    "@ministryofjustice/frontend": "^6.0.0",
    "@tsconfig/node24": "24.0.3",
    "agentkeepalive": "^4.5.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "chart.js": "^3.9.1",
    "chartjs-adapter-dayjs-3": "^1.2.3",
    "chartjs-chart-matrix": "^3.0.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "dayjs": "^1.11.12",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.13.0",
    "jquery": "^3.7.1",
    "json-2-csv": "^5.5.6",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "nunjucks-date": "^1.5.0",
    "parseurl": "^1.3.3",
    "redis": "^5.8.3",
    "superagent": "^10.1.1",
    "with-alpha-hex": "^1.0.6",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@jest/globals": "^30.2.0",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@testing-library/cypress": "^10.0.3",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/connect-flash": "^0.0.40",
    "@types/csurf": "^1.11.5",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.4",
    "@types/node": "25.0.8",
    "@types/nunjucks": "^3.2.3",
    "@types/nunjucks-date": "^0.0.10",
    "@types/parseurl": "^1.3.3",
    "@types/qs": "^6.9.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.62.0",
    "audit-ci": "^6.6.1",
    "autoprefixer": "^10.4.15",
    "axe-core": "^4.9.0",
    "cssnano": "^6.0.1",
    "cypress": "^14.5.4",
    "cypress-axe": "^1.6.0",
    "cypress-multi-reporters": "^1.6.3",
    "cypress-xpath": "^2.0.1",
    "del": "^7.1.0",
    "esbuild": "^0.27.2",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-html-reporter": "^3.10.1",
    "jest-junit": "^16.0.0",
    "js-beautify": "^1.15.4",
    "lint-staged": "^16.0.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.6.7",
    "mocha-junit-reporter": "^2.2.1",
    "mockdate": "^3.0.5",
    "nock": "^14.0.10",
    "node-html-parser": "^6.1.5",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^7.8.0",
    "prettier": "^2.8.7",
    "prettier-plugin-jinja-template": "^0.5.0",
    "require-dir": "^1.2.0",
    "sass": "^1.66.1",
    "serve": "^14.2.4",
    "superagent": "^10.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1",
    "wiremock": "^3.13.1"
  },
  "peerDependencies": {
    "jquery": "^3.7.1"
  }
}
