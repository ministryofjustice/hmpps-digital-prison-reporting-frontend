{
  "name": "@ministryofjustice/hmpps-digital-prison-reporting-frontend",
  "version": "1.0.0",
  "description": "The Digital Prison Reporting Frontend contains templates and code to help display data effectively in UI applications.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/hmpps-digital-prison-reporting-frontend.git"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "package": "gulp build:package",
    "ci:release": "HUSKY=0 CI=true semantic-release --debug",
    "ci:dryrun": "HUSKY=0 CI=true semantic-release --dry-run",
    "docs": "gulp build:docs && eleventy --input=./docs --output=package/dpr --pathprefix hmpps-digital-prison-reporting-frontend",
    "docs:local": "gulp build:docs-local && eleventy --input=./docs --output=package/dpr --pathprefix hmpps-digital-prison-reporting-frontend/package/dpr",
    "test": "npm-run-all --parallel test:*",
    "test:jest": "jest",
    "test:lint": "eslint . --cache --max-warnings 0",
    "test:docs": "npm run docs",
    "test:packaging": "npm run package",
    "start-test-app": "npm run package && node $NODE_OPTIONS test-app/start-server.js",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config-file cypress-tests/integration-tests/cypress.config.js",
    "int-test-ui": "cypress open --config-file cypress-tests/integration-tests/cypress.config.js",
    "clean": "gulp package:clean && rm -rf node_modules",
    "lint:fix": "eslint . --fix",
    "generate-api-types": "openapi-typescript https://digital-prison-reporting-mi-dev.hmpps.service.justice.gov.uk/v3/api-docs --output src/dpr/types/api.d.ts && npm run lint:fix"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@material-design-icons/font": "^0.14.13",
    "agentkeepalive": "^4.5.0",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "csurf": "^1.11.0",
    "express": "^4.18.2",
    "govuk-frontend": "^5.3.0",
    "material-design-icons-iconfont": "^6.7.0",
    "moment": "^2.30.1",
    "nunjucks": "^3.2.4",
    "nunjucks-date": "^1.5.0",
    "parseurl": "^1.3.3",
    "redis": "^4.6.14",
    "superagent": "^8.1.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@badeball/cypress-cucumber-preprocessor": "^18.0.6",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@ministryofjustice/frontend": "^2.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.0",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@types/nunjucks": "^3.2.3",
    "@types/nunjucks-date": "^0.0.10",
    "@types/parseurl": "^1.3.3",
    "@types/qs": "^6.9.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.62.0",
    "audit-ci": "^6.6.1",
    "autoprefixer": "^10.4.15",
    "axe-core": "^4.9.0",
    "body-parser": "^1.20.2",
    "cssnano": "^6.0.1",
    "cypress": "^13.1.0",
    "cypress-axe": "^1.5.0",
    "cypress-multi-reporters": "^1.6.3",
    "del": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gray-matter": "^4.0.3",
    "gulp": "^5.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-filter": "^7",
    "gulp-flatten": "^0.4.0",
    "gulp-postcss": "^9.0.1",
    "gulp-rollup": "^2.17.0",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-zip": "^5.1.0",
    "highlight.js": "^11.9.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-html-reporter": "^3.10.1",
    "jest-junit": "^16.0.0",
    "js-beautify": "^1.14.9",
    "lint-staged": "^13.2.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.6.7",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.3.8",
    "node-html-parser": "^6.1.5",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^6.5.4",
    "prettier": "^2.8.7",
    "prettier-plugin-jinja-template": "^0.5.0",
    "require-dir": "^1.2.0",
    "sass": "^1.66.1",
    "semantic-release": "^22.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
