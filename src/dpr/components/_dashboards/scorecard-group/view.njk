{% from "../scorecard/view.njk" import dprScoreCard %}

{% macro dprScoreCardGroup(id, scorecards) %}

  {% if scorecards[0].name %}
    {% for group in scorecards %}
      <p class="govuk-heading-s"><strong>{{ group.name }}</strong></p>
      <div class="dpr-scorecard-group">
        {% for scorecard in group.scorecards %}
          {{ dprScoreCard(scorecard) }}
        {% endfor %}
      </div> 
    {% endfor %}
  {% else %}
    <div class="dpr-scorecard-group">
      {% for scorecard in scorecards %}
        {{ dprScoreCard(scorecard) }}
      {% endfor %}
    </div> 
  {% endif %}
{% endmacro %}
