{% from "govuk/components/button/macro.njk" import govukButton %}

{% macro dprFiltersActions(args) %}
    {% set submitText = args.submitText %}
    {% set submitId = args.submitId %}
    {% set resetText = args.resetText %}
    {% set resetId = args.resetId %}
    {% set showReset =  args.showReset %}
    {% set defaultQuery =  args.defaultQuery %}

    <div class="govuk-button-group">
      {% if submitId %}
        {{ govukButton({
          text: submitText,
          classes: "govuk-button--primary",
          attributes: {
            id: submitId
          }
        }) }}

        {{ govukButton({
          text: 'Save defaults',
          classes: "govuk-button--primary",
          attributes: {
            id: submitId,
            formaction: './filters/save-defaults'
          }
        }) }}
      {% endif %}
    </div>
{% endmacro %}
