{% macro dprSelectedFilters(selectedFilters) %}    
  <div class='dpr-selected-filters-container'>
    <div class='dpr-selected-filters'>
      <div>
        <p class="govuk-body govuk-!-margin-bottom-1"><strong>Selected filters</strong></p>
      </div>
      <div id="dpr-selected-filters">
        {% if selectedFilters.length %}      
          {% for selected in selectedFilters %}
            {% set key = selected.key %}
            {% set displayValue = selected.displayValue %}
            {% set text = selected.text %}
            {% set value = selected.value %}
            {% set classes = selected.classes %}
            {% set disabled = selected.disabled %}
            {% set constraints = selected.constraints %}
            {% if disabled %}
              <p class="govuk-body {{ classes }}"><span class='dpr-selected-filter__field'><strong>{{ text }}</strong></span>: <span class='dpr-selected-filter__value'>{{ displayValue }}</span></p>
            {% else %}
              <a href="#" 
                class="govuk-link govuk-body {{ classes }}" 
                data-query-param-key= {{ key }} 
                data-query-param-value= '[{{ value }}]'
                data-query-constraint-values= '{{ constraints | json }}'
              >
              <span class='dpr-selected-filter__field'><strong>{{ text }}</strong></span>: <span class='dpr-selected-filter__value'>{{ displayValue }}</span>
              </a>
            {% endif %}
          {% endfor%}
      {% else %}
        <p class="govuk-body-s govuk-!-margin-top-2">No filters selected</p>
      {% endif %}
      </div>
    </div>
  </div>
{% endmacro %}
