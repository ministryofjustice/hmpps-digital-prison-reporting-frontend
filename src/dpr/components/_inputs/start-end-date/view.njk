{% from "../date-input/view.njk" import dprDate %}

{% macro dprStartEndDate(data, mandatory, label) %}
  {% set name = data.name %}
  {% set text = data.text %}
  {% set value = data.value %}
  {% set min = data.min %}
  {% set max = data.max %}

  {# START #}
  <div class="dpr-daterange__start-end-date-wrapper">
     {% if label %}
      <p class="dpr-daterange__start-end-label govuk-label govuk-label govuk-!-font-weight-bold" for="{{id}}">
        {{ label }}
      </p>
    {% endif %}

    <div class="dpr-daterange__start-date">
      {{ dprDate(
        {
          name: name,
          value: value.start,
          min: min,
          max: max,
          mandatory: mandatory,
          displayName: text + ' start'
        },
        'From',
        '.start',
        true,
        false
      )}}
    </div>

    {# END #}
    <div class="dpr-daterange__end-date">
      {{ dprDate(
        {
          name: name,
          value: value.end,
          min: min,
          max: max,
          mandatory: mandatory,
          displayName: text + ' end'
        },
        'To',
        '.end',
        false
      )}}
    </div>
  </div>
{% endmacro %}
