{% macro dprCopyUrlButton( id ) %}
  {% from "govuk/components/button/macro.njk" import govukButton %}

  <div class="copy-url-button" data-dpr-module="copy-url-button">
    {{ govukButton({
      id: 'copy_url_' + id,
      text: 'Copy URL',
      classes: "govuk-button--inverse",
      attributes: {
        "data-copy-url": "true"
      }
    }) }}
{% endmacro %}