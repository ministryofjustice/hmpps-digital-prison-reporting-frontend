{% extends "page.njk" %}

{% from "components/chart-card/view.njk" import dprChartCard %}

{% block content %}
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
  <script>
    Chart.register(ChartDataLabels)
    Chart.defaults.font.family = 'GDS Transport'
    Chart.defaults.font.size = 16;
  </script>
  <h1 class="govuk-heading-l">{{ title }}</h1>

  <div class="govuk-width-container">

    <h2 class="govuk-heading-l">Bar Charts</h2> 
    {% for bar in barCharts %}
      <div class="govuk-!-margin-bottom-6 govuk-!-margin-top-6 govuk-!-padding-bottom-6 govuk-!-padding-top-6">
        {{ dprChartCard(bar) }}
      </div>
    {% endfor %}

    <h2 class="govuk-heading-l">Pie Charts</h2> 
    {% for pie in pieCharts %}
      <div class="govuk-!-margin-bottom-6 govuk-!-margin-top-6 govuk-!-padding-bottom-6 govuk-!-padding-top-6 ">
        {{ dprChartCard(pie) }}
      </div>
    {% endfor %}

    <h2 class="govuk-heading-l">Multi Charts</h2> 
    {% for multi in multiCharts %}
      <div class="govuk-!-margin-bottom-6 govuk-!-margin-top-6 govuk-!-padding-bottom-6 govuk-!-padding-top-6">
        {{ dprChartCard(multi) }}
      </div>
    {% endfor %}

    <h2 class="govuk-heading-l">Line Charts</h2> 
    {% for line in lineCharts %}
      <div class="govuk-!-margin-bottom-6 govuk-!-margin-top-6 govuk-!-padding-bottom-6 govuk-!-padding-top-6 ">
        {{ dprChartCard(line) }}
      </div>
    {% endfor %}
  </div>
{% endblock %}
