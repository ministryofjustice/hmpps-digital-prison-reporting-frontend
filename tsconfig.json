{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "ignoreDeprecations": "5.0",
    "types": ["cypress", "cypress-axe", "@testing-library/cypress"]
  },
  "exclude": ["node_modules", "dist", "dist-test-app", "package", "esbuild", "dist-docs"],
  "include": ["**/*.ts"]
}
